{
    "name": "lifewheel",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --plugin-search-dir . --check .",
        "format": "prettier --plugin-search-dir . --write ."
    },
    "engines": {
        "node": ">=18"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^2.0.1",
        "@sveltejs/kit": "^1.12.0",
        "@types/d3-shape": "^3.1.1",
        "@types/qrcode": "^1.5.0",
        "@vitejs/plugin-basic-ssl": "^1.0.1",
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.21",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.4",
        "prettier-plugin-svelte": "^2.9.0",
        "prettier-plugin-tailwindcss": "^0.2.5",
        "svelte": "^3.57.0",
        "svelte-check": "^3.1.4",
        "tailwindcss": "^3.2.7",
        "tslib": "^2.5.0",
        "typescript": "^5.0.2",
        "vite": "^4.2.0"
    },
    "type": "module",
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 100,
        "plugins": [
            "prettier-plugin-svelte"
        ],
        "pluginSearchDirs": [
            "."
        ],
        "overrides": [
            {
                "files": "*.svelte",
                "options": {
                    "parser": "svelte"
                }
            }
        ]
    },
    "dependencies": {
        "d3-shape": "^3.2.0",
        "qrcode": "^1.5.1",
        "rfc4648": "^1.5.2"
    }
}
